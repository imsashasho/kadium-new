extends ../layout/main	
block meta
	title= '404'
	meta(name='description', content='')
block head
		link(rel='stylesheet', href="./assets/styles/main.min.css")
block scripts
	script(src='./assets/scripts/index.js')
	script(defer src='./assets/scripts/vendors.bundle.js')
	script(defer src='./assets/scripts/index.bundle.js')

block content
	section(class="page404")
		.page404-wrap
			.noise
			.page404-img 
				img(src="./assets/images/404doggo.png", alt="")
			div(class="page404-inner")
				h1(class="page404__title") 404
				span(class="page404__title-small") There is no such page.
				p(class="page404__subtitle") Start with the main or see what apartments we offer
				div(class="page404-link-wrap")
					a.page404-btn-back.btn(onclick="window.history.go(-1);")
						span.page404-btn__text back
					a.page404-btn-home.btn(href="/")
						span.page404-btn__text Home page
block header	
	include ../includes/header.pug
block modal
	include ../includes/thank-you-popup.pug
	include ../includes/contact-popup.pug